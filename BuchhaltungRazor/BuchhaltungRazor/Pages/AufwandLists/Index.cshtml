@page
@model BuchhaltungRazor.Pages.AufwandLists.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Aufwand List</h1>

<p>
    <a asp-page="Create" asp-route-id=@Model.IDAufwand>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AufwandList[0].Titel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AufwandList[0].Betrag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AufwandList[0].PreisEinheit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AufwandList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Betrag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreisEinheit)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-page="../AufWands/Index">Back to List</a>
</div>
